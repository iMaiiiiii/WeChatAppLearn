/* pages/todos/todos.wxss */
.container {
  border-top: 1rpx solid #e0e0e0;
}

.search {
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  align-items: center;
  box-shadow: 0 0 5rpx #e0e0e0;
  display: flex;
}

.search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search text {

}

.todos {
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .item {
  display: flex;
  padding: 10rpx;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.todos .item:last-child {
  border-bottom: 0;
}

.todos .item text {
  flex: 1;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #444;
}

.todos .item.completed text {
  color: #888;
  text-decoration: line-through;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #666;
  text-align: center;
}



.footer {
  font-size: 30rpx;
  margin: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #333;
}